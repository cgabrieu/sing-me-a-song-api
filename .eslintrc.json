{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
        "error",
        {
            "js": "ignorePackages"
        }
       ],
       "no-await-in-loop": "off",
       "no-restricted-syntax": "off",
       "no-param-reassign": "off"
    }
}
